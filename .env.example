# === Discord Configuration ===
# Discord Bot Token (สำหรับ discord.py) หรือ Webhook URL
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here
DISCORD_CHANNEL_ID=1234567890123456789

# === Data Sources Configuration ===
# เปิด/ปิดแหล่งข้อมูล (true/false)
ENABLE_ARXIV=true
ENABLE_CROSSREF=true
ENABLE_BIORXIV=false
ENABLE_SEMANTIC_SCHOLAR=false

# Semantic Scholar API (ถ้าใช้งาน)
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key

# === Content Filtering ===
# คำค้นหาที่สนใจ (คั่นด้วย comma)
KEYWORDS_INCLUDE=LLM,diffusion,machine learning,AI,deep learning,neural network
KEYWORDS_EXCLUDE=survey,review only,obsolete

# หมวดหมู่ arXiv ที่สนใจ
ARXIV_CATEGORIES=cs.AI,cs.CL,cs.LG,cs.CV,stat.ML

# === Summarization Configuration ===
# LLM Provider: openai, anthropic, local, rule_based
SUMMARIZER_MODE=openai
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# === Scheduling ===
# เวลาโพสต์ (24-hour format)
POST_TIME=20:00
TIMEZONE=Asia/Bangkok

# === Limits ===
# จำนวน paper สูงสุดต่อวัน
MAX_PAPERS_PER_DAY=5
# จำนวน request ต่อนาทีสำหรับแต่ละ API
RATE_LIMIT_ARXIV=10
RATE_LIMIT_CROSSREF=50

# === Database ===
DATABASE_URL=sqlite:///llm_news.db
# สำหรับ PostgreSQL: postgresql://user:password@host:port/database

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=logs/llm_news.log

# === Content Guidelines ===
# ความยาวสรุป (คำ)
SUMMARY_MIN_LENGTH=150
SUMMARY_MAX_LENGTH=250
TLDR_MAX_LENGTH=2

# === Error Handling ===
# จำนวนครั้งที่ retry เมื่อล้มเหลว
MAX_RETRIES=3
RETRY_DELAYS=60,300,900

# === Development ===
# เปิดโหมดทดสอบ (จะไม่โพสต์จริง)
DRY_RUN=false
DEBUG=false